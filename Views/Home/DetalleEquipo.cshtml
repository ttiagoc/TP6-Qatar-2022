@{
    ViewData["Title"] = "DetalleEquipo";
}



<div class="container informacion">
<h1 class="marroncito text-center">@ViewBag.InfoEquipo.Nombre</h1>

<h1 class="marroncito text-center"> Continente:@ViewBag.InfoEquipo.Continente</h1>
<h1 class="marroncito text-center">    Copas ganadas: @ViewBag.InfoEquipo.CopasGanadas</h1>
</div>
<div class="imag">
<img src=@ViewBag.InfoEquipo.Camiseta width="auto" height="300px">
</div>

 <a href='@Url.Action("AgregarJugador","Home", new {IdEquipo=@ViewBag.InfoEquipo.IdEquipo})'  class="btn btn-primary mt-2">Crear un Jugador</a>
 
<table class="table table-striped table-dark">
  <thead>
    <tr>
     
      <th scope="col">Jugadores de @ViewBag.InfoEquipo.Nombre</th>
     
    </tr>
  </thead>

   <tbody>
       @foreach (Jugador jug in @ViewBag._ListaJugadores)
       {
        
           if(@jug.IdEquipo == ViewBag.InfoEquipo.IdEquipo){
            <tr>
      <th scope="row">@jug.Nombre</th>
     
     <td><a href='@Url.Action("VerDetalleJugador","Home", new {IdJugador = jug.IdJugador, IdEquipo = jug.IdEquipo})'>Detalle</a></td>
     <td><a href='@Url.Action("EliminarJugador","Home", new {IdJugador = jug.IdJugador, IdEquipo = jug.IdEquipo})'>Eliminar</a></td>
    </tr>
       }
       }
   
  </tbody>
</table>